extends admin_head

block content
  h1= title
  p Welcome to #{title}
  table
    each item in computers
      tr
        td.name #{item.name}
        td #{item.type}
        td
          a(href='/admin/update/#{item._id}') 修改
        td
          a(href="/computer/#{item._id}") 查看
        td
          form(action="/admin/delete" method="post")
            input(type="text" name="name" value="#{item.name}" readonly)
            input(value="删除" type="submit")