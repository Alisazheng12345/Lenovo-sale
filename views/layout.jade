doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet',href='/stylesheets/style.css')
    script(src="/javascripts/jquery-1.12.3.min.js")
    script(src="/javascripts/bootstrap.min.js")
    script(src="/javascripts/jquery.js")
    script(src="/javascripts/javascript.js")
  body(data-spy="scroll" data-target="#myScrollspy")
    nav.navbar.navbar-default.navbar-inverse
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed( type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") Lenovo 联想商城
        .collapse.navbar-collapse(id="bs-example-navbar-collapse-1")
          ul.nav.navbar-nav
            li.active
              a(href="/") 首页
                span.sr-only (current)
            li
              a(href="/Lenovo") Lenovo电脑
            li
              a(href="/Thinkpad") Thinkpad电脑
            li.dropdown
              a.dropdown-toggle(href="#" id="hover" data-toggle="dropdown" role="button" aria-haspopup="true" data-hover="dropdown" aria-expanded="false") 热门款推荐
                span.caret
              ul.dropdown-menu
                - for(var i in computers)
                    if (computers[i].show == 1)
                      li
                        a(href="/computer/#{computers[i]._id}") #{computers[i].name}
          form.navbar-form.navbar-right(role="search")
            .form-group
              //- input(type="text" class="form-control" placeholder="Search")
              //- button(type="submit" class="btn btn-default") 搜索
              if (username)
                span.username(id="username") Hi,#{username}
                a(href="/shoplist") 购物车
                a(href="/clear") 注销
                a.forget 修改密码
              else
                a(id="login") 登录
                a(id="logon") 注册
              //- span #{username}
          //- span(style="display:none") #{username}
    .container.login
      .page-header
        h4
          span 用户登录
          span(class="cancel") 
            a X
        form.form-horizontal(action="/login" method="post")
          .form-group
            .col-md-5
            input(type="text" class="form-control" name="username" placeholder="用户名")
          .form-group
            .col-md-5
            input(type="password" class="form-control" name="password" placeholder="密码")
          .form-group
            input.btn.btn-primary(value="登录" type="submit")
        span.login_foot 不是会员?
          a(id="logon_now") 立即注册
        a(class="forget") 忘记密码?
    .container.logon
      .page-header
        h4
          span 用户注册
          span(class="cancel") 
            a X
        form.form-horizontal(action="/logon" method="post")
          .form-group
            .col-md-5
            input(type="text" id="name" class="form-control" name="username" placeholder="用户名")
            span(id="nameRemind")
          .form-group
            .col-md-5
            input(type="password" id="password" class="form-control" name="password" placeholder="密码")
            span(id="passwordRemind")
          .form-group
            .col-md-5
            input(type="password" id="sure" class="form-control" name="password_sure" placeholder="确认密码")
            span(id="sureRemind")
          .form-group
            .col-md-5
            input(type="text" id="email" class="form-control" name="email" placeholder="验证邮箱")
            span(id="emailRemind")
          .form-group
            input.btn.btn-primary(value="注册" disabled="disabled" type="submit" id="submit" )
    .container.change
      .page-header
        h4
          span 修改密码
          span(class="cancel") 
            a X
        form.form-horizontal(action="/change" method="post")
          .form-group
            .col-md-5
            input(type="text" id="change_name" class="form-control" name="username" placeholder="用户名")
          .form-group
            .col-md-5
            input(type="password" class="form-control" name="password" placeholder="新密码")
          .form-group
            .col-md-5
            input(type="password" class="form-control" name="sure" placeholder="确认密码")
          .form-group
            .col-md-3
            input(type="text" class="form-control" name="code" placeholder="验证码")
            .col-md-2
            a.btn.btn-primary(id="checkCode") 获取验证码
          .form-group
            input.btn.btn-primary(value="确认修改" type="submit")
    block content
