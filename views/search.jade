extends layout

block content
  .container
    .col-lg-12.col-md-12.col-xs-12.search-box
      form.search-form(action="/search" method="post")
        input.form-control(type="text" name="value" id="search")
        button.btn.search-btn(type="submit" id="search_btn") 搜索
    .col-lg-12.col-md-12.col-xs-12.search_result
      - for(var i in computers)
        .col-sm-4.col-xs-12.item.item_computer
          .img_container
            a(href="/computer/#{computers[i]._id}")
              img(src="#{computers[i].images}")
            h4
              a(href="/computer/#{computers[i]._id}") #{computers[i].name}
            p.detail #{computers[i].infor}
            p.cost ¥#{computers[i].cost}
  footer.footer
  hr
