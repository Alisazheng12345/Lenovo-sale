extends layout

block content
  .container
    .row
      .col-lg-1.col-md-0.col-xs-0
      .col-lg-3.col-md-0.col-xs-0(id="myScrollspy")
        ul.nav.nav-tabs.nav-stacked.side_list(data-spy="affix" data-offset-top="125")
          li.title 商品分类
          li.active
            a(href="#section-1") 常规笔记本
          li
            a(href="#section-2") 超轻薄笔记本
          li
            a(href="#section-3") 互联网爆款
          li
            a(href="#section-4") 游戏本
          li
            a(href="#section-5") 变形笔记本
      .col-lg-8.col-md-12.col-xs-12
        div.carousel.slide(id="myCarousel")
          ol.carousel-indicators
            li.active(data-target="#myCarousel" data-slide-to="0")
            li(data-target="#myCarousel" data-slide-to="1")
            li(data-target="#myCarousel" data-slide-to="2")
          div.carousel-inner
            div.item.active
              img(src="/images/lenovo/1.jpg" alt="First slide")
            div.item
              img(src="/images/lenovo/2.jpg" alt="Second slide")
            div.item
              img(src="/images/lenovo/3.jpg" alt="Third slide")
    .row
      .col-lg-3.col-md-0.col-xs-0
      .col-lg-9.col-md-12.col-xs-12
        .com_line
          h3.col-md-12.first(id="section-1") 常规笔记本
          - var count = 0;
          - for(var i in computers)
              if computers[i].serie == "常规笔记本" && count<4
                - count++;
                .col-sm-3.col-xs-12.item
                  .img_container
                    a(href="/computer/#{computers[i]._id}")
                      img(src="/images/imgs/#{computers[i].name}.jpg")
                    h4
                      a(href="/computer/#{computers[i]._id}") #{computers[i].name}
                    p.detail #{computers[i].infor}
                    p.cost ¥#{computers[i].cost}
        .clear
