extends admin_head

block content
  h1= title
  p Welcome to #{title}
  form(method="post" action="/admin/computer/new")
    div
      span 名称
      input(name="name" value=computer.name type="text")
    div
      span 型号
      //- input(name="type" value=computer.type type="text")
      select(name="type")
        option(value="Lenovo电脑") Lenovo电脑
        option(value="Thinkpad电脑") Thinkpad电脑
    div
      span 简介
      input(name="infor" value=computer.infor type="text")
    div
      span 所属系列
      //- input(name="serie" value=computer.serie type="text")
      select(name="serie")
        option(value="常规笔记本") 常规笔记本
        option(value="超轻薄笔记本") 超轻薄笔记本
        option(value="常规笔记本") 互联网爆款
        option(value="超轻薄笔记本") 游戏本
        option(value="常规笔记本") 变形笔记本
        option(value="X系列") X系列
        option(value="T系列") T系列
        option(value="S系列") S系列
        option(value="E系列") E系列
        option(value="W系列") W系列
        option(value="平板系列") 平板系列
    div
      span 价格
      input(name="cost" value=computer.cost type="text")
    div
      span 海报地址
      input(name="posters" value=computer.posters type="text")
    div
      span 图片地址
      input(name="images" value=computer.images type="text")
    div
      span 首页显示
      //- input(name="show" value=computer.show type="text")
      select(name="show")
        option(value="0") 不显示
        option(value="1") 显示
    div
      span cpu名称
      input(name="cpu_name" value=computer.cpu_name type="text")
    div
      span cpu速度
      input(name="cpu_speed" value=computer.cpu_speed type="text")
    div
      span cpu型号
      input(name="cpu_type" value=computer.cpu_type type="text")
    div
      span 操作系统
      input(name="system" value=computer.system type="text")
    div
      span 屏幕大小
      input(name="show_size" value=computer.show_size type="text")
    div
      span 屏幕型号
      input(name="show_type" value=computer.show_type type="text")
    div
      span 显卡型号
      input(name="xian_type" value=computer.xian_type type="text")
    div
      span 硬盘大小
      input(name="pan_size" value=computer.pan_size type="text")
    div
      span 内存类型
      input(name="ram_type" value=computer.ram_type type="text")
    div
      span 内存大小
      input(name="ram_size" value=computer.ram_size type="text")
    div
      span 端口类型
      input(name="port_type" value=computer.port_type type="text")
    div
      span 端口数量
      input(name="port_amount" value=computer.port_amount type="text")
    div
      span 声卡类型
      input(name="listen_type" value=computer.listen_type type="text")
    div
      span 电源类型
      input(name="power_type" value=computer.power_type type="text")
    div
      span 续航时间
      input(name="power_time" value=computer.power_time type="text")
    div
      span 尺寸
      input(name="size" value=computer.size type="text")
    div
      span 净重
      input(name="weight" value=computer.weight type="text")
    div
      input(type="submit" value="提交")
  p #{warning}